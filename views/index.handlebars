{{!-- <h2>Select your burger and eat up.</h2> --}}

<div class="container">
  <div class="row justify-content-md-center">
    <div id="toBeEaten" class="col col-md-6">
      <h4>Your Order</h4>
      <br>
      <ul style="list-style: none;">
        {{#each burgers}}
        {{#unless this.consumed}}
        <li>
          <class class="label"> {{this.burger_name}}
          <button id="eatIt" data-id="{{this.id}}" class="eatBuger">Devour it!</button>
          <button id="dumpIt" data-id="{{this.id}}" class="delBurger">X</button></class>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-1">
      {{!-- Variable width content --}}
    </div>
    <div id="eaten" class="col col-md-5">
      <h4>In Your Stomach</h4>
      <br>
      <ul>
        {{#each burgers}}
        {{#if this.consumed}}
        <li>
          <p><span class="label">Burger:</span> {{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>






