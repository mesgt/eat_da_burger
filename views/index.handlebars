<h1>Burgers Galore</h1>

<h2>Select your burger and eat up.</h2>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  {{#unless this.consumed}}
  <li>
    <p><span class="label">Burger:</span> {{this.burger_name}}</p>
    <button data-id="{{this.id}}" class="delquote">Devour it!</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="burger_name" name="burger" placeholder="Enter burger name">
  </div>

  <button type="submit">Add the burger</button>
</form>